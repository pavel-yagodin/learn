.example
	position relative
	padding 10px
	border-radius 10px

	&__text
		color #333366
		padding-bottom 10px

		& b
			font-weight bold
		& i
			font-style italic

	&__box
		display flex
		justify-content space-between
		align-items flex-start

	&__source
		padding 5px 5px 5px 0px
		background-color rgba(0,0,0,.03)

	&__view
		padding 5px 0

	&__view
	&__code
		&:not(:last-child)
			margin-right 10px

	&_color_white
		background-color #fff

	&__lang
		float right
		margin-top -9px
		margin-right 6px
		display inline-block
		text-align right
		padding 0 5px
		font-size 0.75em
		font-weight bold
		font-style italic
		background-color rgba(0,0,0,.7)
		color #fff
