.section
	position relative
	color #333333
	height 100%
	min-height 700px

	&__wrapper
		display flex
		flex-direction column
		justify-content center
		align-items center
		min-height 100vh
		max-width 1260px
		padding 20px
		margin 0 auto
		text-align center

		& > *:not(:last-child)
			margin-bottom 3em

	&_color_yellow
		background-color #ffdd99

	&_color_blue
		background-color #3c5499
		color #fff

	&_color_green
		background-color #17c2a4
		color #fff

	&_color_light
		background-color #e7f1f8
		color #333366

	&_color_white
		color #333366

	&_color_purple
		background-color #87509c
		color #fff

