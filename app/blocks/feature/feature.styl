.feature
	width 260px
	padding 20px
	display flex
	flex-direction column
	align-items center
	justify-content flex-start
	text-align center

	&__title
		margin 15px 0 10px
		font-size 1.5em
		font-weight bold
		text-transform uppercase

	&__description
		font-size 1em

	&__heading
		width 600px

	&_direction_row
		width 100%
		flex-direction row
		justify-content space-around

	&_text_large &__heading
		width 800px

